<ol class="post-list">
  {{#each posts}}
    <li>
      <article class="post">
        <div class="title">
          <a href="{{post_text}}" target="_blank">{{title}}</a>

          <span>Posted by
            {{user.username}}
            on
            {{created_at}}</span>
          |
          <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
        </div>
        <div class="meta">
          {{post_text}}
        </div>
      </article>
    </li>
  {{/each}}
</ol>